{
  "manifest_version": 2,
  "name": "Passdoo Password Manager",
  "short_name": "Passdoo",
  "version": "1.7.0",
  "description": "Password manager per ODOO - Accedi e inserisci le password salvate in Passdoo direttamente nel browser",
  "author": "Silvio Balduzzi - NovaCS S.r.l.",
  "homepage_url": "https://portal.novacs.net",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "passdoo@novacs.net",
      "strict_min_version": "109.0"
    }
  },
  
  "icons": {
    "16": "src/icons/icon-16.png",
    "32": "src/icons/icon-32.png",
    "48": "src/icons/icon-48.png",
    "128": "src/icons/icon-128.png"
  },
  
  "browser_action": {
    "default_icon": {
      "16": "src/icons/icon-16.png",
      "32": "src/icons/icon-32.png",
      "48": "src/icons/icon-48.png"
    },
    "default_title": "Passdoo - Password Manager",
    "default_popup": "src/popup/popup.html"
  },
  
  "background": {
    "scripts": ["src/background/service-worker-firefox.js"],
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.js"],
      "css": ["src/content/content-styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "cookies",
    "alarms",
    "clipboardWrite",
    "<all_urls>"
  ],
  
  "web_accessible_resources": [
    "src/icons/*",
    "src/content/*"
  ],
  
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      },
      "description": "Apri Passdoo"
    },
    "fill_credentials": {
      "suggested_key": {
        "default": "Alt+Shift+F",
        "mac": "Alt+Shift+F"
      },
      "description": "Compila credenziali nella pagina corrente"
    }
  },
  
  "options_ui": {
    "page": "src/options/options.html",
    "browser_style": true
  },
  
  "content_security_policy": "script-src 'self'; object-src 'none';"
}
